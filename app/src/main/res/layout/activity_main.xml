<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/jinn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jinn"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnJinn"
        app:layout_constraintStart_toStartOf="@+id/btnJinn" />

    <Button
        android:id="@+id/btnJinn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/joker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <Button
        android:id="@+id/btnJoker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/joker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joker"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnJoker"
        app:layout_constraintStart_toStartOf="@+id/btnJoker" />

</androidx.constraintlayout.widget.ConstraintLayout>